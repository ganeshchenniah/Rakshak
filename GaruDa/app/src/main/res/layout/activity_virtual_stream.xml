<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ganesh.garuda.virtual_stream">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Camera"
        android:id="@+id/opencamera"
	android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stream"
        android:id="@+id/streaming"
        android:layout_below="@+id/opencamera"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/opencamera"
        android:layout_alignEnd="@+id/opencamera" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kill Camera"
        android:id="@+id/killcamera"
        android:layout_below="@+id/streaming"
        android:layout_alignLeft="@+id/opencamera"
        android:layout_alignStart="@+id/opencamera"
        android:layout_alignRight="@+id/streaming"
        android:layout_alignEnd="@+id/streaming" />

</RelativeLayout>
